<RelativeLayout android:id="@+id/lineItem"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="269dp"
	android:gravity="center_vertical" 
    android:background="#FFFFFF">
 
	<ImageView android:id="@+id/imagemProduto" android:layout_width="48dip"
		android:layout_height="48dip" android:layout_alignParentLeft="true" />
 
	
	
	<TextView android:id="@+id/nomeProduto" android:layout_height="wrap_content"
		android:layout_marginLeft="10dip" android:textSize="16sp" android:textStyle="bold"
		android:textColor="#ff000000" android:layout_width="wrap_content"
	 />
	
	<TextView android:id="@+id/precoProduto" android:layout_height="wrap_content"
		android:layout_marginLeft="240dip" android:textSize="16sp "
		android:layout_marginTop="30dip"
		android:textStyle="bold"
		android:textColor="#ff000000" android:layout_width="wrap_content"
			android:layout_below="@+id/text1" />
	
	
		<ImageView android:id="@+id/pedirProduto" android:layout_width="48dip"
		android:layout_height="48dip" android:layout_alignParentLeft="true" />
 

</RelativeLayout>